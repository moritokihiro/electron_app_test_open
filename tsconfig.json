{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,

    // ✅ React JSX 対応の追加
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": ["src"]
}
